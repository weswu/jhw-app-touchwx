                </ui-row>
              </view>
            </ui-roller-item>
          </ui-roller>
        </ui-col>
      </ui-row>
    </view>
    <view class="crpt">技术支持：{{agent.user.enterprise.name}}</view>
  </view>
</template>

<script>
import api from '../../static/utils/api'
import Tips from '../../static/utils/tips'
import Utils from '../../static/utils/utils'
export default {
  config: {
    enablePullDownRefresh: false,
    usingComponents: {
      'cc-header': '../../packages/cc-header'
    }
  },
  data: {
    NAV_HEIGHT:wx.STATUS_BAR_HEIGHT+wx.DEFAULT_HEADER_HEIGHT+'px',
    // 轮播
    images: [
      {
        src: 'upload/j/j2/jihui/picture/2018/12/26/9a36aaa8-7e6e-4ce9-834e-701931883bae.jpg'
      },
      {
        src: 'upload/j/j2/jihui/picture/2018/12/26/106c1f15-35f3-4277-a967-4da488b314f8.jpg'
      },
      {
        src: 'upload/j/j2/jihui/picture/2018/12/26/d43e7eab-8302-4c46-a9ad-9792bb3661cf.jpg'
      }
    ],
    swiperHeight: 0,
    swiperCurrent: 0,
    market: [
      {url: 'caseWebsite', name: '全民建站', icon: 'icon-wangzhan', content: '海量案例'},
      {url: 'caseApp', name: '企业应用', icon: 'icon-qiye', content: '助力企业成长', agent: true},
      {url: 'caseApplet', name: '微信端', icon: 'icon-weixin', content: '小程序海量案例'},
      {url: 'caseDanao', name: '企业大脑', icon: 'icon-danao', content: '让企业智能办公', agent: true}
    ],
    grids: [
      {url: 'caseVideo', name: '建站快速入门', icon: 'icon-beginnerguide', content: '按步骤指导操作'},
      {url: 'caseQuestion', name: '常见问题', icon: 'icon-kuaisurumen', content: '自助排除故障'}
    ],
    userInfo: {},
    integralCount: {},
    // news
    gonggaoList: [],
    hotList: [],
    // 经销商
    agent: {}
  },
  onLoad () {
    if (!wx.getStorageSync('domain')){
      wx.setTabBarItem({
        index: 0,
        text: '机汇网'
      })
    }
    let that = this
    getApp().getUserInfo(res => {
      that.setData({
        userInfo: res
      })
    })
    getApp().getUser(res => {
      that.setData({
        integralCount: res.integralCount
      })
    })
    // 经销商
    let agent = getApp().globalData.agent
    this.setData({
      agent: agent
    })
    if (agent.agentId) {
      this.getBanner()
    }
    this.getGonggao()
    this.getHot()
  },
  // 扫一扫
  saoyisao () {
    wx.scanCode({
      success: (res) => {
        if (res.scanType === 'QR_CODE') {
          wx.navigateTo({
            url: '/pages/setting/webView?src=' + res.result
          })
        }
      }
    })
  },
  /*  轮播 */
  getBanner () {
    var that = this
    api.wxappbanner({
      data: {
        enterpriseId: this.data.agent.user.enterpriseId
      }
    }).then(res => {
      var data = res.attributes.data
      let images = []
      if (data.length > 0) {
        data.forEach(item => {
          images.push({
            src: Utils.picUrl(item.serverPath, 3)
          })
        })
      }
      that.setData({
        images: images
      })
    })
  },
  // 轮播
  imageLoad (e) {
    var $width = e.detail.width,    //获取图片真实宽度
      $height = e.detail.height,
      ratio = $width / $height;    //图片的真实宽高比例

    var viewWidth = wx.getSystemInfoSync().windowWidth;    //窗口宽度
    var viewHeight = viewWidth / ratio;    //计算的高度值
    this.setData({
      swiperHeight: 'height:' + viewHeight + 'px'
    })
  },
  swiperChange (e){
    this.setData({
      swiperCurrent: e.detail.current
    })
  },
  // 签到
  signIn () {
    if (this.data.integralCount.dailyPoint === 1) {
      Tips.loading()
      api.signIn().then(res => {
        Tips.loaded()
        if (res.success) {
          getApp().globalData.integralCount.dailyPoint = 0
          var field = 'integralCount.dailyPoint'
          this.setData({
            [field]: 0
          })
          Tips.success('签到成功')
        } else {
          Tips.error(res.msg)
        }
      })
    }
  },
  // 十分钟
  tenVideo () {
    if (this.data.agent.agentId) {
      let video = this.data.agent.vTen
      let src = video.substring(24, video.length-5)
      if (src) {
        wx.navigateTo({
          url: '/pages/home/caseVideo?title=入门介绍&vid=' + src
        })
      }
    }
  },
  jihui () {
    wx.navigateTo({
      url: '/pages/home/caseJihui'
    })
  },
  jihuiProduct () {
    wx.navigateTo({
      url: '/pages/home/caseProduct'
    })
  },
  getHot () {
    api.newsCategoryChild({
      data: {
        page: 1,
        per_page: 8,
        content: 1,
        category_id: parseInt(this.data.agent.questionCateId.substring(9))
      },
      id: this.data.agent.user.enterpriseId
    }).then(res => {
      this.setData({
        hotList: res.list
      })
    })
  },
  getGonggao () {
    api.gonggao({
      data: {
        page: 1,
        pageSize: 9,
        agentId: this.data.agent.agentId
      }
    }).then(res => {
      let data = res.attributes.data
      let list = []
      let row = []
      data.forEach((item, index) => {
        row.push({
          title: '恭喜' + item.enterpriseName + '网站上线！'
        })
        if (index % 2 === 0) {
          list.push({
            children: row
          })
          row = []
        }
      })
      this.setData({
        gonggaoList: list
      })
    })
  },
  newsDetail (e) {
    wx.navigateTo({
      url: 'caseQuestionDetail?id=' + e.currentTarget.dataset.id + '&title=精选'
    })
  }
}
</script>

