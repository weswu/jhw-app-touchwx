<template>
  <view>
    <web-view src="{{src}}"></web-view>
  </view>
</template>

<script>
export default {
  data: {
    src: ''
  },
  onLoad (option){
    if (option.src.indexOf('pc.jihui88.com') > -1){
      option.src = option.src + '?isMobile=true'
    }
    this.setData({
      src: 'https://www.jihui88.com/webview.html?src=' + option.src
    })
  }
}
</script>

